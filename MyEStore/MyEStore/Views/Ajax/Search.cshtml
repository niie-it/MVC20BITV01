@{
	ViewData["Title"] = "Search";
}

<h1>Search</h1>
<fieldset>
	<legend>Tìm gì</legend>
	<input id="findword" placeholder="Tìm gì?" />
</fieldset>
<div id="result"></div>
@section Scripts{
	<script>
		//document ready: đã generate html/css
		$(function () {
			//gắn sự kiện keyup
			$("#findword").keyup(function () {
				$.ajax({
					url: "/Ajax/Search",
					type: "POST",
					data: {
						keyword: $(this).val().trim()
					},
					success: function(response){
						$("#result").html(response);
					}
				});
			});
		});
	</script>
}